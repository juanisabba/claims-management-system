{
  "name": "claims-management-system",
  "private": true,
  "description": "Claims Management Monorepo",
  "scripts": {
    "dev:api": "pnpm --filter api run start:dev",
    "dev:client": "pnpm --filter client start",
    "dev": "concurrently -n \"API,CLIENT\" -c \"magenta,cyan\" \"pnpm dev:api\" \"pnpm dev:client\"",
    "api:dev": "pnpm --filter api run start:dev",
    "api:test": "pnpm --filter api run test",
    "api:cov": "pnpm --filter api run test:cov",
    "client:dev": "pnpm --filter client run start",
    "build": "pnpm --filter api build && pnpm --filter client build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.8.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@nestjs/mongoose": "^11.0.4",
    "@types/mongoose": "^5.11.97",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "mongoose": "^9.1.5"
  }
}
